<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data Mobil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #4caf50, #81c784); /* Gradasi hijau */
            font-family: 'Poppins', sans-serif; /* Font modern */
            color: #ffffff;
        }

        .container {
            background-color: #ffffff; /* Latar belakang putih */
            border-radius: 20px; /* Sudut melengkung */
            padding: 40px; /* Padding lebih besar */
            max-width: 600px;
            margin-top: 50px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3); /* Efek bayangan */
        }

        h1 {
            text-align: center;
            color: #4caf50; /* Hijau utama */
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-label {
            color: #4caf50; /* Hijau utama */
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #81c784; /* Hijau terang */
            padding: 10px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #4caf50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.7);
        }

        .btn {
            border-radius: 25px; /* Tombol melengkung penuh */
            padding: 10px 20px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #4caf50;
            border: none;
            color: #ffffff;
        }

        .btn-primary:hover {
            background-color: #388e3c;
            transform: scale(1.05);
        }

        .btn-secondary {
            background-color: #757575;
            border: none;
            color: #ffffff;
        }

        .btn-secondary:hover {
            background-color: #616161;
            transform: scale(1.05);
        }

        .d-flex {
            gap: 15px;
            justify-content: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Edit Data Mobil</h1>
        <form id="formEditMobil" action="<%= url + 'contact/update/' + contact.id %>" method="POST">
            <!-- Nama Mobil -->
            <div class="form-group mb-3">
                <label for="nama" class="form-label">Nama Mobil :</label>
                <input type="text" class="form-control" name="nama" id="nama" value="<%= contact.nama %>" required>
            </div>

            <!-- Type Mobil -->
            <div class="form-group mb-3">
                <label for="type" class="form-label">Type Mobil:</label>
                <input type="text" class="form-control" name="type" id="type" value="<%= contact.type %>" required>
            </div>

            <!-- Warna Mobil -->
            <div class="form-group mb-3">
                <label for="warna" class="form-label">Warna Mobil:</label>
                <select class="form-select" name="warna" id="warna" required>
                    <option value="" disabled>Pilih Warna Mobil</option>
                    <option value="Hitam" <%= contact.warna === 'Hitam' ? 'selected' : '' %>>Hitam</option>
                    <option value="Putih" <%= contact.warna === 'Putih' ? 'selected' : '' %>>Putih</option>
                    <option value="Silver" <%= contact.warna === 'Silver' ? 'selected' : '' %>>Silver</option>
                    <option value="Biru" <%= contact.warna === 'Biru' ? 'selected' : '' %>>Biru</option>
                </select>
            </div>

            <!-- Tombol -->
            <div class="d-flex">
                <button type="submit" class="btn btn-primary">Simpan</button>
                <a href="/contact" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        // Tambahkan event listener pada form
        document.getElementById("formEditMobil").addEventListener("submit", function (e) {
            // Tampilkan alert
            alert("Data berhasil diedit!");

            // Redirect atau reset form (opsional)
            window.location.href = "/contact";
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
