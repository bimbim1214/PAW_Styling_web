<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f8f9fa, #e0e0e0);
            color: #333;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #4caf50;
        }

        .navbar .nav-link {
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

        .navbar .nav-link:hover,
        .navbar .nav-link.active {
            color: #ffeb3b;
            text-decoration: underline;
        }

        .carousel-item img {
            border-radius: 10px;
            object-fit: cover;
        }

        .carousel-indicators button {
            background-color: #4caf50;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #ffffff, #e0e0e0);
            overflow: hidden;
            position: relative;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .card-header {
            background: linear-gradient(135deg, #4caf50, #388e3c);
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
            text-align: center;
            padding: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .btn-signout {
            background-color: #ff5722;
            color: white;
            border-radius: 20px;
            padding: 8px 20px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .btn-signout:hover {
            background-color: #e64a19;
            transform: scale(1.05);
        }

        .footer {
            background-color: #4caf50;
            color: #fff;
            text-align: center;
            padding: 15px;
            margin-top: auto;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center text-white" href="<%= url %>">
                <img src="/public/images/bmw_logo.png" alt="Logo" width="40" height="40" class="me-2">
                <span>BMW Club</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="<%= url %>">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= url %>profile">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= url %>contact">Todo</a>
                    </li>
                </ul>
                <a href="<%= url %>login/logout" class="btn btn-signout" onclick="return confirmLogout();">
                    <i class="fa fa-sign-out me-2"></i>Sign Out
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <section class="mt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3>Welcome, <b>
                                    <%= userName %>
                                </b></h3>
                        </div>
                        <div class="card-body">
                            <p>Selamat Datang di halaman utama!</p>
                            <footer class="blockquote-footer">Enjoy your experience!</footer>
                        </div>
                    </div>
                </div>
            </div>

            <div id="carouselExample" class="carousel slide mt-5" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="0"
                        class="active"></button>
                    <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="1"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/public/images/bmw-m.png" class="d-block w-100" alt="Image 1">
                    </div>
                </div>
                <!-- <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button> -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; <span id="year"></span> BMW Club. All Rights Reserved.</p>
    </footer>

    <script>
        document.getElementById("year").textContent = new Date().getFullYear();

        function confirmLogout() {
            return confirm("Apakah Anda yakin ingin keluar?");
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>