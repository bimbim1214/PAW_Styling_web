<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Data Mobil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    body {
        background-color: #4caf50;
        /* Warna latar belakang yang lebih cerah */
        font-family: Arial, sans-serif;
        /* Gaya font keseluruhan */
    }

    h1 {
        color: #343a40;
        /* Warna teks judul */
        font-size: 2.5rem;
        /* Ukuran font judul */
    }

    .container {
        max-width: 600px;
        /* Membatasi lebar kontainer */
        background-color: #4caf50;
        ;
        /* Latar belakang putih untuk form */
        border-radius: 10px;
        /* Sudut form melengkung */
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        /* Bayangan lembut */
    }

    .form-label {
        font-weight: bold;
        /* Teks label lebih tebal */
        color: #495057;
        /* Warna teks label */
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        /* Membuat input lebih melengkung */
        border: 1px solid #ced4da;
        /* Warna border */
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #80bdff;
        /* Warna border saat fokus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        /* Efek bayangan */
    }

    .btn {
        width: 120px;
        /* Ukuran tombol lebih besar */
        height: 40px;
        margin: 0 10px;
        /* Jarak antar tombol */
        font-weight: bold;
        border-radius: 20px;
        /* Tombol lebih melengkung */
    }

    .btn-secondary {
        background-color: #6c757d;
        /* Warna tombol cancel */
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        /* Warna tombol simpan */
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        /* Efek hover tombol */
    }
</style>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Tambah Data Mobil</h1>
        <form id="formTambahMobil" method="POST" action="/contact/save" class="border p-4 rounded shadow">
            <!-- Nama Mobil -->
            <div class="form-group mb-3">
                <label for="nama" class="form-label">Nama Mobil:</label>
                <input type="text" class="form-control" name="nama" id="nama" required>
            </div>

            <!-- Type Mobil -->
            <div class="form-group mb-3">
                <label for="type" class="form-label">Type Mobil:</label>
                <input type="text" class="form-control" name="type" id="type" required>
            </div>

            <!-- Warna Mobil -->
            <div class="form-group mb-3">
                <label for="warna" class="form-label">Warna Mobil:</label>
                <select class="form-select" name="warna" id="warna" required>
                    <option value="" disabled selected>Pilih Warna Mobil</option>
                    <option value="Hitam">Hitam</option>
                    <option value="Putih">Putih</option>
                    <option value="Silver">Silver</option>
                    <option value="Biru">Biru</option>
                </select>
            </div>

            <!-- Tombol Kirim dan Cancel-->
            <div class="d-flex justify-content-center align-items-center">
                <a href="/contact" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </form>
    </div>

    <script>
        // Tambahkan event listener pada form
        document.getElementById("formTambahMobil").addEventListener("submit", function (e) {
            // Tampilkan alert
            alert("Data berhasil ditambahkan!");

            // Redirect atau reset form (opsional)
            window.location.href = "/contact";
        });
    </script>

    <!-- Menambahkan JS untuk Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>